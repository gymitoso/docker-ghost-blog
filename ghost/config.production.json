{
    "url": "http://yourUrl.com",
    "database": {
        "client": "mysql",
        "connection": {
            "host":     "mysql",
            "user":     "ghostUser",
            "password": "databasePassword",
            "database": "ghost",
            "charset":  "utf8mb4"
        }
    },
    "server": {
        "host": "0.0.0.0",
        "port": "2368"
    },
    "mail": {
        "transport": "SMTP",
        "options": {
            "service": "Gmail",
            "auth": {
                "user": "your_email@gmail.com",
                "pass": "your_email_password"
            }
        }
    },
    "paths": {
        "contentPath": "content/"
    },
    "logging": {
        "level": "info",
        "rotation": {
            "enabled": true
        },
        "transports": ["file", "stdout"]
    }
}
